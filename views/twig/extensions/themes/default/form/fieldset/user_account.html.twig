{% extends "form/fieldset/user_account.html.twig" %}

{% block user_account_username %}
{{ parent() }}

<script>
    ( function() {
        var $interval = setInterval( function() {
            if (window.EnderecoIntegrator && window.EnderecoIntegrator.ready) {
                window.EnderecoIntegrator.initEmailServices(
                    '',
                    {
                        "name": "default",
                        "postfixCollection": {
                            "email": ".content [name=\"lgn_usr\"]"
                        }
                    }
                );
                clearInterval($interval);
            }
        }, 100);
    })();
</script>
{% endblock %}
